<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sbsromero.proyectosaraadministradores.fragments.VisualizarMonitorFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <RelativeLayout
            android:id="@+id/relativeVisualizarMonitor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/imageViewFotoPerfil"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:src="@drawable/image_circle" />

            <TextView
                android:id="@+id/textViewNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageViewFotoPerfil"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Nombre monitor"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textViewTelefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewNombre"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Telefono"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textViewUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTelefono"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Username"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textViewSemestre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textViewUsername"
                android:layout_alignLeft="@+id/textViewUsername"
                android:layout_alignRight="@+id/textViewUsername"
                android:layout_alignStart="@+id/textViewUsername"
                android:layout_below="@id/textViewUsername"
                android:layout_marginTop="10dp"
                android:hint="Semesre"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textViewLineaAsesoria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textViewUsername"
                android:layout_alignLeft="@+id/textViewUsername"
                android:layout_alignRight="@+id/textViewUsername"
                android:layout_alignStart="@+id/textViewUsername"
                android:layout_below="@id/textViewSemestre"
                android:layout_marginTop="10dp"
                android:hint="LineaAsesoria"
                android:textSize="18dp" />

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>


</FrameLayout>
