<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sbsromero.proyectosara.activities.monitor.DetalleCitasPendientes">

    <include layout="@layout/toolbar" />

    <TextView
        android:id="@+id/textViewFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="21/10/2017 09:30pm"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textViewFechaCita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewFecha"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Fecha y hora"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textViewEstudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewFechaCita"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Nombre"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textViewEstudianteCita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewEstudiante"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Estudiante"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textViewDocumento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewEstudianteCita"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="1112482695"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textViewDocumentoCita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewDocumento"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Documento"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textViewSemestre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewDocumentoCita"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="1"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textViewSemestreCita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSemestre"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Semestre"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textViewLineaAsesoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewSemestreCita"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="ProgramaciÃ³n"
        android:textSize="22dp" />


    <TextView
        android:id="@+id/textViewLineaAsesoriaCita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewLineaAsesoria"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Asesoria"
        android:textSize="18dp" />


    <Button
        android:id="@+id/btnAceptarCita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnRechazarCita"
        android:layout_alignParentStart="true"
        android:text="Aceptar" />

    <Button
        android:id="@+id/btnRechazarCita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="0dp"
        android:text="Rechazar" />
</RelativeLayout>
